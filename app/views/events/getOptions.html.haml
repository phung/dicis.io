.main
  .logo_event
    %h1 dicis.io

  %h2.option_title What is your option?
  %input#option_name{'type' => 'text'}
  %input#submit_event{'type' => 'submit', 'value' => '+'}


  %script
    var updateUrl =
    = "'/#@eventId/update-options';"
    var addUrl =
    = "'/#@eventId/add-option';"
  %ul#options
  :javascript
    $.ajax({
      url: updateUrl,
      type: 'POST',
      data: '',
      contentType: 'application/json; charset=utf-8',
      dataType: 'json',
      async: false,
      success: function(msg) {
        alert(msg);
      }
    });
    $('#submit').on('click', function() {
      $.ajax({
        url: addUrl,
        type: 'POST',
        data: JSON.stringify({ 'option': $('#option').val()}),
        contentType: 'application/json; charset=utf-8',
        dataType: 'json',
        async: true,
        success: function(msg) {
          alert(msg);
        }
      });
    });


